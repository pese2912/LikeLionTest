       <%p.replies.each do |r| %>
        <%= r.comment%><br>
    <%end%>
    <form action ="/comment_create/<%=p.id%>" method='post'>
    <div class="form-group">
     
        <input type="text" name="reple" class="form-control" id="exampleInputEmail1" placeholder="댓글을 써주세요">
    </div>
  
  <button type="submit" class="btn btn-default">댓글달기</button>
    
   
</form>

     
      </li>
  </ul>
  

<% end %>



<a href="/">게시판 글쓰러가기</a>
</div>